<div class="edit-game-page">
  <h2>Edit your game</h2>

  {{#with game}}
    <form id="form" action="/games/edit/{{_id}}" method="POST" enctype="multipart/form-data" class="form-signin">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" placeholder="{{title}}" value="{{title}}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input type="text" name="author" value="{{author}}" placeholder="{{author}}" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="form-group">
        <label for="Bootcamp">Your Bootcamp</label><br>
        <input type="text" name="bootcamp" value="{{bootcamp}}" placeholder="{{bootcamp}}" class="form-control" id="exampleInputPassword1">
        <small id="passwordHelpInline" class="text-muted">Must be Month in letters, then a / and year 2020. No space in between e.g. March/2020</small>
      </div>
      {{!-- <div class="form-group">
        <label for="github">Github profile</label><br>
        <input type="text" name="githubprofile " value="{{gitHubUrl}}" placeholder="{{gitHubUrl}}" class="form-control" id="exampleInputPassword1">
      </div> --}}
      <div class="form-group">
        <label for="Play link">Play link</label><br>
        <input type="text" name="Play link" value="{{gameUrl}}" placeholder="{{gameUrl}}" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="form-group">
        <label for="Screenshot">Screenshot</label>
        <input type="file" name="photo" class="form-control" id="exampleInputPassword1">
        <input class="hiddenImgValue" type="text" name="imgPathName" value="{{imgPath}}">
        <input class="hiddenImgValue" type="text" name="imgNameName" value="{{imgName}}">
        <small id="passwordHelpInline" class="text-muted">
            Must be 500x500 pixels in jpg format. Max 500KB
        </small>
      </div>
      <br>
      <button type="submit" class="btn btn-secondary btn-login" value="save">Update</button>
    </form>
    
  {{/with}}
</div>
