    {{!-- </div> --}}
    <div class="form-group">
      <label for="Play link">Play link</label><br>
      <input type="text" name="link" placeholder="Link to play your game" class="form-control" id="exampleInputPassword1">
    </div>
    <div class="form-group">
      <label for="Screenshot">Screenshot</label>
      <input type="file" name="photo" class="form-control" id="exampleInputPassword1">
        <small id="passwordHelpInline" class="text-muted">
            Must be 500x500 pixels in jpg format. Max 500KB
        </small>
    </div>
    <br>
    <button type="submit" class="btn btn-secondary btn-login" value="save">Add my Game</button>
