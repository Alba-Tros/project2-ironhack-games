<div class="login-page">

  <h1>Login Page</h1>


  <form action="/login" method="POST" class="form-signin">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="exampleInputPassword1" name="password">
    </div>
    {{#if message}}
    <div class="error-message">{{message}}</div>
    {{/if}}
    <br>
    <button type="submit" class="btn btn-dark btn-login">Login</button>
    <br>
    <button type="submit" class="btn btn-dark btn-login"><img class="github-btn" src="/images/github-silhouette.png"><a class="github-btn" href="/auth/github">Sign in with Github</a></button>
  </form>
  <br>
  <p class="create-account-message">
        Do you want to create an account?
      <a href="/signup">Create account</a>
  </p>
  
</div>
